<view class="videoContainer">
    <!-- 头部搜索区 -->
    <view class="header">
        <image class="logo" src="/static/images/logo.png"></image>
        <view class="search" bindtap="toSearch">搜索</view>
        <image class="video" src="/static/images/video/video.jpg"></image>
    </view>
    <!-- 横向导航栏 -->
    <scroll-view class="navScroll" scroll-x enable-flex scroll-into-view="scroll{{navId}}" scroll-with-animation>
        <view id="scroll{{item.id}}" class="navItem" wx:for="{{navList}}" wx:key="id">
            <view class="navContent {{navId==item.id?'active':''}}" bindtap="changeNavFn" id="{{item.id}}">
                {{item.name}}
            </view>
        </view>
    </scroll-view>
    <!-- 视频列表区域 -->
    <scroll-view class="videoScroll" scroll-y enable-flex bindrefresherrefresh="handleRefresh" refresher-enabled refresher-triggered="{{istriggered}}" bindscrolltolower="handlePullDown">
        <view class="videoItem" wx:for="{{videoList}}" wx:key="id">
            <!-- wx:if="{{playimgId==item.data.vid}}" -->
            <video wx:if="{{playVideoId==item.data.vid}}" class="common" id="{{item.data.vid}}" src="{{item.data.urlInfo.url}}" bindplay="handlePlay" poster="{{item.data.coverUrl}}" object-fit="cover" bindtimeupdate="handleTimeupdate" bindended="handleEnd" autoplay></video>
            <image wx:else id="{{item.data.vid}}" class="common" hover-class="imageHover" src="{{item.data.coverUrl}}" bindtap="handlePlay"></image>
            <!-- title -->
            <view class="content">{{item.data.title}}</view>
            <!-- 评论区 -->
            <view class="footer">
                <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
                <text class="nickName">{{item.data.creator.nickname}}</text>
                <view class="comments_praised">
                    <text class="item">
                        <text class="iconfont icon-buoumaotubiao15"></text>
                        <text class="count">{{item.data.praisedCount}}</text>
                    </text>
                    <text class="item">
                        <text class="iconfont icon-pinglun1"></text>
                        <text class="count">{{item.data.commentCount}}</text>
                    </text>
                    <button open-type="share" class="item btn">
                        <text class="iconfont icon-gengduo"></text>
                    </button>
                </view>
            </view>
        </view>
    </scroll-view>
</view>