<!-- 首页 -->
<view class="indexContainer">
  <!-- 轮播图区域 -->
  <swiper class="banner"indicator-dots 
    indicator-color="ivory" 
    indicator-active-color="#d43c33"
    autoplay
    circular>
      <swiper-item wx:for="{{bannerList}}" wx:key="bannerId">
        <image src="{{item.pic}}"></image>
      </swiper-item>
  </swiper>

  <!-- 图标导航区域 -->
  <view class="navContainer">
    <view class="navItem" bindtap="toRecommendSong">
      <text class="iconfont icon-meirituijian"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-icon-ranking"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
      <text>直播</text>
    </view>
  </view >

   <!-- 推荐歌曲 -->
  <view class="recommendContainer">
    <!-- 标题区 -->
     <navHeader title="推荐歌曲" nav="为你精心推荐" ></navHeader>
    <!-- 内容区 -->
    <scroll-view class="recommendScroll" enable-flex scroll-x>
         <view class="scrollItem" wx:for="{{recommmendList}}" wx:key="id">
           <image src="{{item.picUrl}}" >
           </image>
           <text>{{item.name}}</text>
         </view>
    </scroll-view>
  </view>

  <!-- 排行榜区域 -->
  <view class="topList">
    <!-- 标题区 -->
    <navHeader title="排行榜" nav="热歌风向标"></navHeader>
    <!-- 内容区 -->
<swiper 
    class="topListSwiper" 
    next-margin="100rpx"
    snap-to-edge >
    <swiper-item 
      class="swiperItem" 
      wx:for="{{topList}}" 
      wx:key="name">
        <view class="items">
          <view class="title">{{item.name}}</view>
          <view class="musicItem" 
          wx:for="{{item.tracks}}" 
          wx:for-item="musicItem" 
          wx:key="id">
            <image  src="{{musicItem.al.picUrl}}">
            </image>
            <text class="count">{{index+1}}</text>
            <text class="musicName">{{musicItem.al.name}}</text>
             </view>
        </view>
    </swiper-item>
      
</swiper>
  </view>

</view>