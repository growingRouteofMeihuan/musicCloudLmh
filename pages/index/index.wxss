/* pages/index/index.wxss */
/* 轮播图样式 */
.banner{
  width:100%;
  height: 300rpx;
}
.banner image{
  width:100%;
  height: 100%;
}
/* 图标导航区域 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;

}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  color: #fff;
  background-color: #f70606;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding:20rpx ;
  height: 400rpx;
}

/* 推荐歌曲内容区 */
.recommendScroll{
  display: flex;
  height: 400rpx;
}
.scrollItem{
  width: 200rpx;
  margin: 20rpx 20rpx 0 0;
  font-size: 26rpx;
  
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
 /*  单行文本溢出隐藏，省略号代替 
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden; /*文本超出隐藏*/
	display:-webkit-box; /*盒子模型微弹性伸缩模型*/
	-webkit-box-orient: vertical;/*伸缩盒子的子元素垂直排列*/
	-webkit-line-clamp: 2; /*文本显示2行*/
}
/* 音乐排行榜 */
.topListSwiper{
  height: 500rpx;
}
.topList{
  padding:20rpx ;
}
.swiperItem {
  background-color: rgba(249, 250, 248, 0.959);
  box-sizing: border-box;
  border-left:30rpx solid white;
}

.swiperItem view{
  font-size: 32rpx;
  margin:40rpx 0;
}
.musicItem {
  display: flex;
  margin-bottom: 10rpx;
}
.musicItem image{
  width:100rpx;
  height:100rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


