<view class="recommendSongContainer">
    <!-- 头部区域 -->
    <view class="header">
        <image src="/static/images/recommendSong/recommendSong.jpg"></image>
        <view class="date">
            <text class="month">{{month}}</text>
            <text class="day">/{{day}}</text>
        </view>
    </view>
    <!-- 列表区域 -->
    <view class="listContainer">
        <view class="listHeader">
            <text>播放全部</text>
            <text class="chooseMore">多选</text>
        </view>
        <!-- 内容区 -->
        <scroll-view class="scrollContainer" scroll-y enable-flex>
            <view class="itemContainer" wx:for="{{recommendLIst}}" wx:key="id" bindtap="toSongDetail" data-songitem="{{item}}" data-index="{{index}}">
                <image src="{{item.album.picUrl}}"></image>
                <view class="content">
                    <view>{{item.name}}</view>
                    <view>{{item.artists[0].name}}</view>
                </view>
                <button open-type="share" class="item btn">
                    <text class="iconfont icon-gengduo"></text>
                </button>
            </view>
        </scroll-view>
    </view>
</view>